}

/* 当屏幕向下滑动，主页的动画样式 */
.c-state {
  transform:  translateY(440rpx);
}

@keyframes slidown{
  from{
      transform:  translateY(-100%);
  }
  to{
      transform:  translateY(0%);
  }
}
.slidown{
  display: block;
  animation: slidown .2s ease-in both;
}

/* 上拉动画 */
@keyframes slidup{
  from{
      transform:  translateY(0%);
  }
  to{
      transform:  translateY(-100%);
  }
}
.slidup{
  display: block;
  animation: slidup .2s ease-in both;
  height: 0px;
}


