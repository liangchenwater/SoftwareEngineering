/* 菜单相关 */

/* 菜单内容的 css 样式 */
.temp{
  /* 默认为不显示 */
  display:none;
  /* 下拉框的宽度， */
  width: 100%;
  height: 440rpx;
  overflow-y: scroll;
  line-height:100rpx;
  justify-content: center;
  align-items: center;
  background:rgba(245,245,245,1);
  stroke: rgba(245,245,245,1);
}
.wc {
  margin-top: 2rpx;
